<%- include("../../partials/head") %>

    <%- include("../../partials/bodyStartWithNavBar/") %>
        <%- include("../../partials/sideNav") %>
            <div id="layoutSidenav_content">
                <main>
                    <%- include("../../partials/alertMsg") %>
                    <div class="page-header pb-10 page-header-dark bg-info">
                        <div class="container-fluid">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="page-header-content">
                                        <h1 class="page-header-title fs-md-35 fs-20">

                                            <div class="page-header-icon"><i class="fad fa-at text-white"></i></div>
                                            <span class=" text-capitalize">
                                        Global Quiz Manager
                                </span>
                                        </h1>
                                        <div class="page-header-subtitle fs-md-19 fs-14 text-capitalize">
                                            Edit Global Quiz
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto mb-md-0 mb-3">
                                    <a href="/view-all-global-questions" class="btn btn-sm  btn-sm rounded-pill btn-light font-weight-bold text-primary float-right"><i class="fad fa-eye"></i>&nbsp; View All Global Quiz</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid mt-n10">


                        <div class="card">
                            <div class="card-header">Edit Quiz</div>
                            <form method="post" action="/edit-global-question-data" accept-charset="UTF-8" id="j-forms" class="card-body">
                                <input type="hidden" name="globelQuestionId" value="<%=data._id %>">
                                <% if(typeof msg!=="undefined" && msg){%>
                                    <span style="color: red;">**<%=msg %>**</span>
                                    <%}%>
                                        <div class="sbp-preview">
                                            <div class="sbp-preview-content p-2">
                                                <div class="row mx-0">

                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Question*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="text" placeholder="Enter Question" name="question" value="<%=data.question ? data.question : '' %>" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Point*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="number" placeholder="Enter Point" name="point" value="<%=data.point ? data.point : '' %>"required>
                                                        </div>
                                                    </div>
                        
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group my-3">
                                                            <label for="example-datetime-local-input">Option A*</label>
                                                            <input class="form-control form-control-solid" type="text" placeholder="Enter Option A"  autocomplete="off" value="<%=data.option_A ? data.option_A : '' %>" name="option_A" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group my-3">
                                                            <label for="example-datetime-local-input2">Option B*</label>
                                                            <input class="form-control form-control-solid" type="text" placeholder="Enter Option B" value="<%=data.option_B ? data.option_B : '' %>" name="option_B" autocomplete="off" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group my-3">
                                                            <label for="example-datetime-local-input">Option C*</label>
                                                            <input class="form-control form-control-solid" type="text" placeholder="Enter Option C"  autocomplete="off" value="<%=data.option_C ? data.option_C : '' %>" name="option_C" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group my-3">
                                                            <label for="example-datetime-local-input2">Option D*</label>
                                                            <input class="form-control form-control-solid" type="text" placeholder="Enter Option D" value="<%=data.option_D ? data.option_D : '' %>" name="option_D" autocomplete="off" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Answer*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="text" placeholder="Enter Answer" name="answer" value="<%=data.answer ? data.answer : '' %>" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12 text-right mt-4 mb-2">
                                                        <button class="btn btn-sm btn-success text-uppercase"><i class="far fa-check-circle"></i>&nbsp;Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                    </div>
                        </div>
                    </div>
                </main>

                <%- include("../../partials/alertMsg") %>
                <%- include("../../partials/footer") %>
                    <script>
                        $(window).on('load', function() {

                            $('#preloader_admin').hide();

                        })
                    </script>


                   
                    <script>
                        $('#special').on('click', function() {
                            mySelect.find('option:selected').prop('disabled', true);
                            mySelect.selectpicker('refresh');
                        });

                        $('#special2').on('click', function() {
                            mySelect.find('option:disabled').prop('disabled', false);
                            mySelect.selectpicker('refresh');
                        });

                        $('#basic2').selectpicker({
                            liveSearch: true,
                            maxOptions: 1
                        });
                    </script>



                    <script>
                        $(document).ready(function() {

                            if ($('#accordionSidenavPages a').hasClass('active')) {
                                $('#accordionSidenavPages a.active').parent().parent().prev('a').removeClass('collapsed');
                                $('#accordionSidenavPages a.active').parent().parent().addClass('show');
                                // console.log(id);
                            } else {
                                $('#takeonebar').addClass('slamdown');
                            }
                        });
                    </script>
                   


                    <script type="text/javascript">
                        $.datetimepicker.setLocale('en');
                        $('.datetimepickerget').datetimepicker({
                            lang: 'en',
                            formatDate: 'd.m.Y',
                            step: 5,
                            startDate: new Date()
                        });
                    </script>
                    <script type="text/javascript">
                        $('.datepicker').datepicker({
                            lang: 'en',
                            formatDate: 'd.m.Y',
                            step: 5,
                        });
                    </script>

                    <script>
                        /*jslint browser:true*/
                        /*global jQuery, document*/

                        jQuery(document).ready(function() {
                            'use strict';

                            jQuery('#example-datetime-local-input, #example-datetime-local-input2, #start_date, #end_date, #dob-date, #expire_date').datetimepicker();
                        });
                    </script>
