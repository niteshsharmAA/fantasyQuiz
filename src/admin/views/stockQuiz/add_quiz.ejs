            <div id="layoutSidenav_content">
                <main>
                    <div class="page-header pb-10 page-header-dark bg-info">
                        <div class="container-fluid">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="page-header-content">
                                        <h1 class="page-header-title fs-md-35 fs-20">

                                            <div class="page-header-icon"><i class="fad fa-at text-white"></i></div>
                                            <span class=" text-capitalize">
                                            Stock Quiz Manager
                                </span>
                                        </h1>
                                        <div class="page-header-subtitle fs-md-19 fs-14 text-capitalize">
                                            Create Stock New Quiz
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto mb-md-0 mb-3">
                                    <a href="/stock/view_quiz" class="btn btn-sm  btn-sm rounded-pill btn-light font-weight-bold text-primary float-right"><i class="fad fa-eye"></i>&nbsp; View All Quiz</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container-fluid mt-n10">


                        <div class="card">
                            <div class="card-header">Create Stock Quiz</div>
                            <form method="post" action="/stock/add_quiz" accept-charset="UTF-8" id="j-forms" class="card-body">
                                <% if(msg){%>
                                    <span style="color: red;">**<%=msg %>**</span>
                                    <%}%>
                                        <div class="sbp-preview">
                                            <div class="sbp-preview-content p-2">
                                                <div class="row mx-0">


                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Question*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="text" placeholder="Enter Question" name="question" required>
                                                        </div>
                                                    </div>


                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Option 1*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="text" placeholder="Enter Option 1" name="option_1" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Option 2*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="text" placeholder="Enter Option 2" name="option_2" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Option 3*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="text" placeholder="Enter Option 3" name="option_3" required>
                                                        </div>
                                                    </div>

                                                    
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group my-3">
                                                            <label for="example-datetime-local-input">Start Date*</label>
                                                            <input class="form-control form-control-solid" type="text" placeholder="Enter Start Date" id="example-datetime-local-input" autocomplete="off" value="" name="start_date" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-12">
                                                        <div class="form-group my-3">
                                                            <label for="example-datetime-local-input2">End Date*</label>
                                                            <input class="form-control form-control-solid" type="text" placeholder="Enter End Date" value="" name="end_date" autocomplete="off" id="example-datetime-local-input2" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-12">
                                                        <div class="form-group my-3">
                                                            <label for="job-title">Entry Fee*</label>
                                                            <input class="form-control form-control-solid" id="job-title" type="number" placeholder="Enter Entry Fee" name="entryfee" required>
                                                        </div>
                                                    </div>

                                                    <div class="col-6">
                                                        <div class="form-group my-2">
                                                            <label class="control-label text-bold">Multiply*</label>
                                                            <div style="display: flex;">
                                                            <input required="" class="form-control form-control-solid" name="winning_amount" type="number">
                                                            <label class="control-label col-3 text-bold" >*Entry Fee</label></div>
                                                        </div>
                                                    </div>

                                                    <div class="col-12 text-right mt-4 mb-2">
                                                        <button class="btn btn-sm btn-success text-uppercase"><i class="far fa-check-circle"></i>&nbsp;Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                        </div>
                    </div>
                </main>

